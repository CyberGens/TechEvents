{% extends 'base.html.twig' %}

{% block content %}
    <h1>Planned Events</h1>

    <table>
        <tbody>
            <tr>
                <th>Eventname</th>
                <td>{{ plannedEvent.eventName }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ plannedEvent.userName }}</td>
            </tr>
            <tr>
                <th>Numplan</th>
                <td>{{ plannedEvent.numPlan }}</td>
            </tr>
            <tr>
                <th>Levelinterest</th>
                <td>{{ plannedEvent.levelInterest }}</td>
            </tr>
            <tr>
                <th>Sidenote</th>
                <td>{{ plannedEvent.sideNote }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plannedevent_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('plannedevent_edit', { 'numPlan': plannedEvent.numPlan }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
